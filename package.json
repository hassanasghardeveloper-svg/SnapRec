{
  "name": "snaprec",
  "version": "1.0.0",
  "description": "Screen recorder and screenshot app for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": [
    "screen-recorder",
    "screenshot",
    "electron",
    "desktop-app"
  ],
  "author": "SnapRec",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "build": {
    "appId": "com.snaprec.app",
    "productName": "SnapRec",
    "copyright": "Copyright Â© 2024 SnapRec",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SnapRec",
      "installerIcon": "assets/icons/icon.png",
      "uninstallerIcon": "assets/icons/icon.png",
      "installerHeaderIcon": "assets/icons/icon.png",
      "deleteAppDataOnUninstall": true
    }
  }
}
